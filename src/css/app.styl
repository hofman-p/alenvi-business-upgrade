// app global css

@import '~variables'

@font-face
  font-family alenviTextFont
  src url(../assets/fonts/DaxRegular.ttf)

@font-face
  font-family alenviTitleFont
  src url(../assets/fonts/HelveticaNeue-BoldCond.ttf)

body
  font-family: alenviTextFont
  color: $tertiary

h1, h2, h3, h4, h5, h6
  font-family: alenviTitleFont
  font-weight: regular
  color: $tertiary

h1
  font-size: 3.2em
  color: $primary
  @media (max-width: 400px)
    font-size: 2.4em

h2
  font-size: 2.4em
  @media (max-width: 400px)
    font-size: 1.8em

h3
  font-size: 2.2em
  @media (max-width: 400px)
    font-size: 1.4em

h4
  font-size: 1.8em
  @media (max-width: 400px)
    font-size: 1.1em

h5
  font-size: 1.4em
  @media (max-width: 400px)
    font-size: 0.8em
p
  font-size: 16px

a
  text-decoration: none

.btn-call
  color: $white

.bg-primary-dimmed
  background: rgba(226, 0, 122, .9) !important
